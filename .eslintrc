{
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "object-curly-newline": ["error"],
    "semi": ["error", "never"],
    "semi-style": ["error", "first"],
    "indent": ["error", "tab", {"SwitchCase": 1 }],
    "no-tabs": ["error", { "allowIndentationTabs": true }]
  }
}
